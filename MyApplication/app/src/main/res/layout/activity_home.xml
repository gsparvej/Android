<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Repeatable Button Template -->
            <!-- পাটিগণিত -->
            <LinearLayout
                android:id="@+id/btnArithmetic"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="পাটিগণিত (Arithmetic)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

            <!-- বীজগণিত -->
            <LinearLayout
                android:id="@+id/btnAlgebra"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="বীজগণিত (Algebra)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

            <!-- সূচক -->
            <LinearLayout
                android:id="@+id/btnIndex"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="সূচক (Index)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

            <!-- লগারিদম -->
            <LinearLayout
                android:id="@+id/btnLogarithm"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="লগারিদম (Logarithm)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

            <!-- ধারা -->
            <LinearLayout
                android:id="@+id/btnSeries"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="ধারা (Series)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

            <!-- ত্রিকোণমিতি -->
            <LinearLayout
                android:id="@+id/btnTrigonometry"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="ত্রিকোণমিতি (Trigonometry)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

            <!-- পরিমিতি -->
            <LinearLayout
                android:id="@+id/btnMeasurement"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="পরিমিতি (Measurement)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

            <!-- জ্যামিতি -->
            <LinearLayout
                android:id="@+id/btnGeometry"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="জ্যামিতি (Geometry)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

            <!-- পরিসংখ্যান -->
            <LinearLayout
                android:id="@+id/btnStatistics"
                style="@style/StyledButton">
                <TextView
                    style="@style/ButtonTitle"
                    android:text="পরিসংখ্যান (Statistics)" />
                <TextView
                    style="@style/ButtonSubtitle"
                    android:text="সূত্র, শর্টকাট" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
